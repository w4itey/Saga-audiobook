<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saga.LoginPage"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
            
            <!-- Server Info Header -->
            <StackLayout HorizontalOptions="Center" Spacing="5">
                <Label x:Name="ServerNameLabel" Text="" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label x:Name="ServerUrlLabel" Text="" FontSize="12" TextColor="Gray" HorizontalOptions="Center" />
            </StackLayout>
            
            <!-- Username & Password Section -->
            <StackLayout x:Name="LocalAuthSection" Spacing="15">
                <Label Text="Sign In" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
                
                <Entry x:Name="UsernameEntry" Placeholder="Username" FontSize="16" HeightRequest="50" />
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" FontSize="16" HeightRequest="50" />
                
                <Button x:Name="LoginButton" 
                        Text="Sign In" 
                        Clicked="OnLoginButtonClicked" 
                        BackgroundColor="#007ACC" 
                        TextColor="White" 
                        FontSize="16"
                        HeightRequest="50"
                        CornerRadius="8"
                        Margin="0,10,0,0" />
            </StackLayout>
            
            <!-- SSO Section -->
            <StackLayout x:Name="SSOSection" Spacing="15" IsVisible="False">
                <BoxView BackgroundColor="LightGray" HeightRequest="1" Margin="0,20,0,10" />
                <Label Text="Single Sign-On" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                
                <!-- Dynamic SSO Provider Buttons will be added here -->
                <StackLayout x:Name="SSOButtonsContainer" Spacing="12" />
            </StackLayout>
            
            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                              IsVisible="False" 
                              IsRunning="False" 
                              HorizontalOptions="Center"
                              Color="#007ACC" />
            
            <!-- Back to Server Selection -->
            <Button Text="Change Server" 
                    Clicked="OnChangeServerClicked"
                    BackgroundColor="Transparent" 
                    TextColor="#007ACC" 
                    FontSize="14"
                    Margin="0,30,0,0" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
