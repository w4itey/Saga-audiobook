<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saga.BookDetailPage"
             Title="Book Details">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Image x:Name="CoverImage" Aspect="AspectFit" HeightRequest="300" HorizontalOptions="Center" />
            <Label x:Name="TitleLabel" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            <Label x:Name="SeriesLabel" HorizontalTextAlignment="Center" />
            <Label x:Name="DescriptionLabel" />
            <Button Text="Play" Clicked="OnPlayClicked" />
            <Button Text="Read Ebook" Clicked="OnReadClicked" />
            <Button Text="Download" Clicked="OnDownloadClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
